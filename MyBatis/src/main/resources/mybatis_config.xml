<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--Mybatis 标签的顺序
    properties?,settings?,typeAliases?,typeHandlers?,
    objectFactory?,objectWrapperFactory?,reflectorFactory?,
    plugins?,environments?,databaseIdProvider?,mappers?
    -->



    <properties resource="jdbc.properties"></properties>
    <!--设置类型别名 不区分大小写 -->
    <typeAliases>
        <typeAlias type="com.atguigu.mybatis.pojo1.User" alias="User"></typeAlias>
        <!--以包为单位，将包下所有的类型设置默认的类型别名-->
        <package name="com.atguigu.mybatis.pojo1"/>
    </typeAliases>



<!--    配置数据库-->
    <!--
    environments 是用来配置多个数据库的环境属性的
    属性 default 使用默认的的环境id
    -->
    <environments default="development">

        <!--
        environment： 配置某个具体的环境
        属性：
        id ： 表示连接数据库环境的唯一标识，不能重复
        transactionManager： 设置事务管理方式
        属性：
            type="JDBC/MANAGED"
            JDBC:执行sql时。使用的是JDBC中原生的事务管理方式 事务的提交和回滚要手动来处理
            MANAGED：被管理 例如spring——aop

        dataSource： 设置数据源
        属性：
            type:设置数据源的类型
            type: POOLED/UNPOOLED/JNDI
            POOLED：使用数据库连接池缓存数据库连接
            UNPOOLED：不使用
            JNDI：使用上下文的数据源
        -->
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${jdbc.driver}"/>
                <property name="url" value="${jdbc.url}"/>
                <property name="username" value="${jdbc.username}"/>
                <property name="password" value="${jdbc.password}"/>
            </dataSource>
        </environment>
    </environments>
<!--    引入映射文件-->
    <mappers>
<!--        <mapper resource="mappers/UserMapper.xml"/>-->
        <!--
            以包为单位引入映射文件
            要求：
            1. mapper接口所在的包要和映射文件所在的包一致
            接口所在包：com.atguigu.mybatis.mapper1
            xml映射文件所在包：com.atguigu.mybatis.mapper1
            2. mapper接口要和映射文件的名字一致
        -->
        <package name="com.atguigu.mybatis.mapper1"/>
    </mappers>
</configuration>